@model IEnumerable<TaskManagementMvc.Models.Company>

@{
    ViewData["Title"] = "شرکت‌ها";
    ViewData["Subtitle"] = "مدیریت شرکت‌ها و وضعیت فعال/غیرفعال";
}

@section PageActions {
    <corp-btn variant="primary" icon="bi-plus" asp-action="Create">ایجاد شرکت</corp-btn>
}

<corp-table headers="نام,ایمیل,فعال,اقدامات" striped hover dense>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Email</td>
            <td>
                @if (item.IsActive)
                {<corp-badge variant="success" dense icon="bi-check2">فعال</corp-badge>}
                else
                {<corp-badge variant="danger" dense icon="bi-x">غیرفعال</corp-badge>}
            </td>
            <td class="text-nowrap">
                <corp-btn dense size="sm" variant="secondary" icon="bi-eye" asp-action="Details" asp-route-id="@item.Id">جزئیات</corp-btn>
                <corp-btn dense size="sm" variant="outline" icon="bi-pencil" asp-action="Edit" asp-route-id="@item.Id">ویرایش</corp-btn>
            </td>
        </tr>
    }
</corp-table>


